{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run Streamlit App",
            "type": "debugpy",
            "request": "launch",
            "module": "streamlit",
            "args": [
                "run",
                "${workspaceFolder}/frontend/streamlit_app.py",
                "--server.port=8501"
            ],
            "cwd": "${workspaceFolder}",
            "python": "${workspaceFolder}/venv/Scripts/python.exe",
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Run Flask Backend",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/backend/app.py",
            "cwd": "${workspaceFolder}/backend",
            "python": "${workspaceFolder}/venv/Scripts/python.exe",
            "console": "integratedTerminal",
            "justMyCode": true,
            "env": {
                "FLASK_ENV": "development"
            }
        }
    ],
    "compounds": [
        {
            "name": "Run Full App (Backend + Frontend)",
            "configurations": [
                "Run Flask Backend",
                "Run Streamlit App"
            ]
        }
    ]
}